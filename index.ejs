<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Catatan Pendapatan Toko</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="container">
    <h1>Catatan Pendapatan Toko</h1>
    <form action="/tambah" method="POST" class="form">
      <input type="text" name="tanggal" placeholder="Tanggal (yyyy-mm-dd)" required />
      <input type="number" name="jumlah" placeholder="Jumlah Pendapatan" required />
      <button type="submit">Tambah</button>
    </form>

    <table>
      <thead>
        <tr>
          <th>Tanggal</th>
          <th>Jumlah (Rp)</th>
        </tr>
      </thead>
      <tbody>
        <% pendapatan.forEach(function(item) { %>
          <tr>
            <td><%= item.tanggal %></td>
            <td><%= item.jumlah %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
